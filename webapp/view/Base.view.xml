<mvc:View controllerName="ToolDev.Toolpage.controller.Base" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:tnt="sap.tnt"
	xmlns="sap.m">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button id="navigation" icon="sap-icon://menu2" type="Transparent" press="onSlide"/>
				<Button icon="https://www.pinclipart.com/picdir/big/102-1024630_1blives-sap-idea-factory-conjunct-speaking-sap-logo.png" press="onHomePressed" />
				<ToolbarSpacer/>
				<Label text="Shopping"/>
				<ToolbarSpacer/>
				<Button icon="sap-icon://message-popup"/>
				<Button icon="sap-icon://notification-2"/>
				<Button text="Administrator"/>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation id="sideNavigation" itemSelect="onitemPressed">
				<tnt:NavigationList>
					<tnt:NavigationListItem icon="sap-icon://home" text="Home" key="Home"/>
					<tnt:NavigationListItem icon="sap-icon://action-settings" text="Settings" key="Page1"/>
					<tnt:NavigationListItem icon="sap-icon://dimension" text="Categories" key="Page2">
					<tnt:NavigationListItem icon="sap-icon://retail-store" text="Clothing"/>
					<tnt:NavigationListItem icon="sap-icon://responsive" text="Electronics"/>
					<tnt:NavigationListItem icon="sap-icon://sap-box" text="Gifts"/>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<App id="myApp"></App>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>